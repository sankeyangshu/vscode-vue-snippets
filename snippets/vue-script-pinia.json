{
  "Vue Pinia": {
    "prefix": "vpinia",
    "body": [
      "import { defineStore } from 'pinia';",
      "",
      "",
      "export const ${1:storeName} = defineStore({",
      "\tid: '${2:storeId}',",
      "\tstate: () => ({",
      "\t\t${3:key}: ${4:value}",
      "\t}),",
      "});"
    ],
    "description": "Base for Pinia store"
  },
  "Vue Pinia getters": {
    "prefix": "vgetter",
    "body": ["getters: {", "\t${1:name}: (state) => state.${2:value},", "},"],
    "description": "Vue Pinia getters"
  },
  "Vue Pinia actions": {
    "prefix": "vaction",
    "body": ["actions: {", "\t${1:name}(){", "\t\t${0}", "},"],
    "description": "Vue Pinia actions"
  }
}
